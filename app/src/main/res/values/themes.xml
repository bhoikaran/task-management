<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskManagement" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TaskManagement" parent="Base.Theme.TaskManagement" >
        <item name="colorOnSurface">@color/colorOnSurface</item>
    </style>



    <style name="NorecordTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:elevation">16dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:textColor">@color/color_light_black</item>
        <item name="android:text">@string/empty_records</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorBlue</item>
    </style>


    <!-- styles.xml -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Text styles -->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="progressBarCentre">
        <item name="android:layout_width">@dimen/progressbar_center</item>
        <item name="android:layout_height">@dimen/progressbar_center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:elevation">@dimen/margin_sixteen</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>


    <style name="Widget.App.Chip.Outlined" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStrokeColor">?attr/colorOnSurface</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipIconSize">20dp</item>
        <item name="chipIconTint">?attr/colorOnSurface</item>
        <item name="chipIconEnabled">true</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.Chip" parent="">
        <item name="android:background">@drawable/bg_input_pill</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="Widget.App.OutlineButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_input_pill</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#FF8A65</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>





